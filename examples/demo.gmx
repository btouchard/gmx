<script>
// ============================================================
// GMX Demo — Showcase of all available features
// ============================================================

// --- Imports (3 styles) ---
// 1. Default import: import a .gmx component
//    import TaskItem from './components/TaskItem.gmx'
//
// 2. Destructured import: pick specific exports
//    import { sendEmail, MailerConfig } from './services/mailer.gmx'
//
// 3. Native Go import: use any Go package
//    import "github.com/stripe/stripe-go" as Stripe

// --- Constants & Variables ---
const APP_NAME = "GMX Demo"
const MAX_TITLE_LENGTH = 255
let requestCount: int = 0
let debugMode: bool = false

// --- Services ---

service Database {
  provider: "sqlite"
  url:      string @env("DATABASE_URL")
}

service Mailer {
  provider: "smtp"
  host:     string @env("SMTP_HOST")
  pass:     string @env("SMTP_PASS")
  func send(to: string, subject: string, body: string) error
}

service GitHub {
  provider: "http"
  baseUrl:  string @env("GITHUB_API_URL")
  apiKey:   string @env("GITHUB_TOKEN")
}

// --- Models ---

model User {
  id:        uuid     @pk @default(uuid_v4)
  email:     string   @email @unique
  name:      string   @min(2) @max(100)
  age:       int      @min(18) @max(150)
  score:     float    @min(0)
  isAdmin:   bool     @default(false)
  createdAt: datetime
  tasks:     Task[]
}

model Task {
  id:        uuid     @pk @default(uuid_v4)
  title:     string   @min(3) @max(255)
  done:      bool     @default(false)
  priority:  int      @min(1) @max(5) @default(3)
  tenantId:  uuid     @scoped
  userId:    uuid
  user:      User     @relation(references: [id])
  createdAt: datetime
}

// --- Functions ---

// GET handler (inferred from "list" prefix)
func listTasks() error {
  let tasks = try Task.all()
  return render(tasks)
}

// GET handler (inferred from "get" prefix)
func getTask(id: uuid) error {
  let task = try Task.find(id)
  return render(task)
}

// POST handler (inferred from "create" prefix)
func createTask(title: string, priority: int) error {
  if title == "" {
    return error("Title cannot be empty")
  }

  const task = Task{
    title: title,
    priority: priority,
    done: false,
    userId: ctx.User
  }

  try task.save()
  return render(task)
}

// PATCH handler (inferred from "toggle" prefix)
func toggleTask(id: uuid) error {
  let task = try Task.find(id)
  task.done = !task.done
  try task.save()
  return render(task)
}

// PATCH handler (inferred from "update" prefix)
func updateTask(id: uuid, title: string) error {
  let task = try Task.find(id)
  task.title = title
  try task.save()
  return render(task)
}

// DELETE handler (inferred from "delete" prefix)
func deleteTask(id: uuid) error {
  let task = try Task.find(id)
  try task.delete()
  return nil
}

// Utility function with model parameter and string interpolation
func getTaskLabel(t: Task) string {
  let label = "Task: {t.title}"
  return label
}

// Business logic with if/else and context access
func createUserTask(title: string) error {
  let userId = ctx.User
  let tenantId = ctx.Tenant

  if userId == "" {
    return error("User not authenticated")
  }

  const task = Task{
    title: title,
    done: false,
    userId: userId
  }

  try task.save()
  return render(task)
}
</script>

<template>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GMX Demo — Full Feature Showcase</title>
  <script src="https://unpkg.com/htmx.org@2.0.4"></script>
</head>
<body>
  <div class="container">
    <header>
      <h1>GMX Demo</h1>
      <p>Tasks: {{len .Tasks}}</p>
    </header>

    <!-- CSRF token is auto-available as {{.CSRFToken}} -->

    <!-- POST: create a task -->
    <form class="task-form"
      hx-post="{{route "createTask"}}"
      hx-target="#task-list"
      hx-swap="beforeend">
      <input type="text" name="title" placeholder="What needs to be done?" required />
      <select name="priority">
        <option value="1">Low</option>
        <option value="3" selected>Normal</option>
        <option value="5">High</option>
      </select>
      <button type="submit">Add Task</button>
    </form>

    <!-- GET: load all tasks -->
    <section
      hx-get="{{route "listTasks"}}"
      hx-trigger="load"
      hx-target="#task-list"
      hx-swap="innerHTML">
    </section>

    <ul id="task-list" class="task-list">
      {{range .Tasks}}
      <li class="task-item {{if .Done}}done{{end}}" id="task-{{.ID}}">

        <!-- PATCH: toggle task -->
        <input
          type="checkbox"
          class="task-checkbox"
          {{if .Done}}checked{{end}}
          hx-patch="{{route "toggleTask"}}?id={{.ID}}"
          hx-target="#task-{{.ID}}"
          hx-swap="outerHTML"
        />

        <span class="task-title">{{.Title}}</span>

        {{if gt .Priority 3}}
          <span class="badge priority-high">High</span>
        {{else if eq .Priority 3}}
          <span class="badge priority-normal">Normal</span>
        {{else}}
          <span class="badge priority-low">Low</span>
        {{end}}

        {{if not .Done}}
          <span class="badge pending">Pending</span>
        {{end}}

        <!-- DELETE: remove task -->
        <button
          class="task-delete"
          hx-delete="{{route "deleteTask"}}?id={{.ID}}"
          hx-target="#task-{{.ID}}"
          hx-swap="outerHTML swap:300ms"
          hx-confirm="Delete this task?"
        >
          Delete
        </button>
      </li>
      {{end}}
    </ul>

    {{if eq (len .Tasks) 0}}
      <p class="empty-state">No tasks yet. Add one above!</p>
    {{end}}
  </div>
</body>
</html>
</template>

