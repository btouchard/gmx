    transition: background 0.2s, opacity 0.3s;
  }
  .task-item:hover { background: #fafafa; }
  .task-item.done .task-title {
    text-decoration: line-through;
    opacity: 0.5;
  }

  .task-checkbox {
    width: 20px;
