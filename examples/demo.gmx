    border-radius: 4px;
    font-size: 1rem;
  }
  .task-form select {
    padding: 0.75rem;
    border: 1px solid #ddd;
    border-radius: 4px;
    font-size: 0.875rem;
    background: white;
  }
  .task-form button {
    padding: 0.75rem 1.5rem;
    background: #007bff;
    color: white;
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    cursor: pointer;
  }
  .task-form button:hover { background: #0056b3; }

  .task-list { list-style: none; }

  .task-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 1rem;
